<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.medichub.dao.PurchaseDao">
    <insert id="createPurchase" parameterType="bo.ucb.edu.medichub.model.Purchase">
        INSERT INTO purchase VALUES (
            null, #{purchaseDate}, #{totalAmount}, #{firstSurname}, #{nit},
            1, #{transaction.txId}, #{transaction.txHost}, #{transaction.txUserId}, #{transaction.txDate}
        )
    </insert>

    <select id="getListPurchase" resultMap="purchaseListMap">
        SELECT
        a.purchase_id as purchaseId,
        a.total_amount as totalAmount,
        a.first_surname as firstSurname,
        a.nit as nit,
        a.purchase_date as datePurchase
        FROM purchase a
        WHERE
        a.status = 1
        ORDER BY a.purchase_date DESC
        LIMIT #{size} OFFSET #{page}
    </select>

    <resultMap id="purchaseListMap" type="bo.ucb.edu.medichub.dto.PurchaseListRequest">
        <result column="purchaseId" property="purchaseId"/>
        <result column="totalAmount" property="totalAmount"/>
        <result column="firstSurname" property="firstSurname"/>
        <result column="nit" property="nit"/>
        <result column="datePurchase" property="datePurchase"/>
    </resultMap>

</mapper>
